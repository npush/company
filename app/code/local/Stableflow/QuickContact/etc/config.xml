<?xml version="1.0"?>

<config>
    <modules>
        <Stableflow_QuickContact>
            <version>0.1.1</version>
        </Stableflow_QuickContact>
    </modules>
    <frontend>
        <routers>
            <quickcontact>
                <use>standard</use>
                <args>
                    <module>Stableflow_QuickContact</module>
                    <frontName>quickcontact</frontName>
                </args>
            </quickcontact>
        </routers>       
        <!--<layout>
            <updates>
                <quickcontact>
                    <file>quickcontact.xml</file>
                </quickcontact>
            </updates>
        </layout>-->
		<translate>
			<modules>
				<Stableflow_QuickContact>
					<files>
						<default>Stableflow_QuickContact.csv</default>
					</files>
				</Stableflow_QuickContact>
			</modules>
		</translate>
    </frontend>
    <global>
		<!--<blocks>
			<quickcontact>
				<class>Stableflow_QuickContact_Block</class>
			</quickcontact>
		</blocks>-->
		<!--<models>
			<quickcontact>
				<class>Stableflow_QuickContact_Model</class>
			</quickcontact>
		</models>-->
		<helpers>
			<quickcontact>
				<class>Stableflow_QuickContact_Helper</class>
			</quickcontact>
		</helpers>
        <resources>
            <quickcontact_setup>
                <setup>
                    <module>Stableflow_QuickContact</module>
                </setup>
                <connection>
                    <use>core_setup</use>
                </connection>
            </quickcontact_setup>
        </resources>
        <template>
            <email>
                <quickcontact_general_template_email translate="label" module="quickcontact">
                    <label>Contact Form</label>
                    <file>quickcontact_form.html</file>
                    <type>html</type>
                </quickcontact_general_template_email>
            </email>
        </template>
    </global>

    <adminhtml>     
		<translate>
			<modules>
				<Stableflow_QuickContact>
					<files>
						<default>Stableflow_QuickContact.csv</default>
					</files>
				</Stableflow_QuickContact>
			</modules>
		</translate>
        <acl>
            <resources>
                <admin>
                    <children>
                        <system>
                            <children>
                                <config>
                                    <children>
                                        <quickcontact translate="title" module="quickcontact">
                                            <title>Quick Contacts Section</title>
                                        </quickcontact>
                                    </children>
                                </config>
                            </children>
                        </system>
                    </children>
                </admin>
            </resources>
        </acl>
    </adminhtml>

    <default>
        <quickcontact>            
            <email>
				<dock_link>1</dock_link>
                <template_email>quickcontact_general_template_email</template_email>
                <recipient_email><![CDATA[hello@example.com]]></recipient_email>
                <sender_email_identity>custom2</sender_email_identity>
            </email>
        </quickcontact>
    </default>
</config>
