<?xml version="1.0"?>
<config>
    <tabs>
        <rulletka translate="label" module="rulletka">
            <label>Rulletka Theme Extensions</label>
            <sort_order>150</sort_order>
        </rulletka>
    </tabs>
    <sections>
        <rulletka translate="label" module="rulletka">
            <class>separator-top</class>
            <label>Extended Breadcrumbs</label>
            <tab>rulletka</tab>
            <sort_order>10</sort_order>
            <show_in_default>1</show_in_default>
            <show_in_website>1</show_in_website>
            <show_in_store>1</show_in_store>
            <groups>
                <rulletka_breadcrumbs translate="label comment">
                    <label>Module Settings</label>
                    <frontend_type>text</frontend_type>
                    <sort_order>10</sort_order>
                    <show_in_default>1</show_in_default>
                    <show_in_website>1</show_in_website>
                    <show_in_store>1</show_in_store>
                    <fields>
                        <enabled translate="label">
                            <label>Enable extension</label>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
                            <sort_order>10</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </enabled>
                    </fields>
                </rulletka_breadcrumbs>
            </groups>
        </rulletka>
    </sections>
</config>