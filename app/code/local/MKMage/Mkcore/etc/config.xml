<?xml version="1.0"?>
<config>  
    <modules>
        <MKMage_Mkcore>
            <version>0.1.0</version>
        </MKMage_Mkcore>
    </modules>
    <global>
        <blocks>
            <mkcore>
                <class>MKMage_Mkcore_Block</class>
            </mkcore>
        </blocks>
        <helpers>
            <mkcore>
                <class>MKMage_Mkcore_Helper</class>
            </mkcore>
        </helpers>
    </global>
    <adminhtml>
    <acl>
        <resources>
            <all>
                <title>Allow Everything</title>
            </all>
            <admin>
                <children>
                    <system>
                        <children>
                            <config>
                                <children>
                                    <mkmage>
                                        <title>MKMage - All</title>
                                    </mkmage>
                                </children>
                            </config>
                        </children>
                    </system>
                </children>
            </admin>
        </resources>
    </acl>
	</adminhtml>
</config>