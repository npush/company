<?php $_menu = $this->getHtml('level-top') ?>
<?php if($_menu): ?>
<div class="block block-category-nav">
    <div class="block-content">
        <ul  id="category-sidebar-nav" class="category-sidebar-nav">
            <?php echo $_menu ?>
            <?php echo $this->getLayout()->createBlock('cms/block')->setBlockId('top_menu_links')->toHtml() ?>
        </ul>
    </div>
</div>
<?php endif ?>
<script type="text/javascript">
    //<![CDATA[
    jQuery(document).ready(function() {
        jQuery('#category-sidebar-nav li a.show-cat').click(function() {
            jQuery(this).children('ul').slideUp();

            if (!jQuery(this).hasClass('active')) {
                jQuery(this).next().slideToggle();
                jQuery(this).addClass('active');
                jQuery(this).prev('a').addClass('active');
                jQuery(this).parent('li').addClass('active');
            }
            else if (jQuery(this).hasClass('active')) {
                jQuery(this).next().slideToggle();
                jQuery(this).removeClass('active');
                jQuery(this).prev('a').removeClass('active');
                jQuery(this).parent('li').removeClass('active');
            }
        });
    });
    //]]>
</script>