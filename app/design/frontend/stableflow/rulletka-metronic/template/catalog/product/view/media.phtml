?>
<?php
    $_product = $this->getProduct();
    $_helper = $this->helper('catalog/output');
?>


<div class="timeline-badge">
    <a href="#modal_product"  data-toggle="modal" class="company-link">
        <div class="label-product clearfix">
            <?php $stats = explode(',', $_product->getResource()->getAttribute('product_state')->getFrontend()->getValue($_product)); ?>
            <?php foreach($stats as $_state) :?>
                <?php switch(trim($_state)):
                    case 'New': ?>
                        <span type="button" class="label-span label-yellow"><?php echo $this->__('New');?></span>
                        <?php break;?>
                    <?php case 'Sale': ?>
                        <span type="button" class="label-span label-primary"><?php echo $this->__('Sale');?></span>
                        <?php break; ?>
                    <?php case 'Promo': ?>
                        <span type="button" class="label-span label-yellow-light"><?php echo $this->__('Promo');?></span>
                        <?php break;?>
                    <?php case 'Out of production': ?>
                        <span type="button" class="label-span label-grey"><?php echo $this->__('Out of production');?></span>
                        <?php break;?>
                <?php endswitch ;?>
            <?php endforeach ;?>
        </div>
        <?php $_img = '<img id="image" class="timeline-badge-userpic" src="'. $this->helper('catalog/image')->init($_product, 'image').'" alt="'.$this->escapeHtml($this->getImageLabel()).'" title="'.$this->escapeHtml($this->getImageLabel()).'" />';?>
        <?php echo $_helper->productAttribute($_product, $_img, 'image'); ?>
    </a>
    <ul class="icon-characteristic">
        <?php $tooltips = explode(',',$_product->getTooltops());?>
        <?php foreach($tooltips as $_tooltipId) :?>
            <?php //$_img = $this->helper('attributeimage')->resizeImg($this->helper('attributeimage')->getAttributeImage($_tooltipId), 100, 100); ?>
            <?php $_img = $this->helper('attributeimage')->getAttributeImage($_tooltipId); ?>
            <?php $_hint = $this->helper('attributeimage')->getAttributeHint($_tooltipId); ?>
            <?php if ($_img ): ?>
                <li>
                    <a href="" data-content="<?php echo $this->escapeHtml($_hint); ?>" data-placement="top" data-trigger="hover" data-container="body" class="popovers">
                        <img src="<?php echo $this->escapeHtml($_img); ?>" alt="">
                        <span><?php echo $this->escapeHtml(Mage::getModel('catalog/resource_eav_attribute')->load($_tooltipId)->getFrontendLabel()); ?></span>
                    </a>
                </li>
            <?php endif; ?>
        <?php endforeach ;?>
    </ul>
</div>

<!-- Modal window -->
<div class="modal fade draggable-modal" id="modal_product" tabindex="-1" role="basic" aria-hidden="true">
    <div class="modal-dialog modal-dialog-lg">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close close-default" data-dismiss="modal" aria-hidden="true"><i class="icon icon-cancel-music"></i></button>
            </div>
            <div class="modal-body clearfix">
                <div class="title-slider clearfix">
                    <h4 class="modal-title"><?php echo $this->escapeHtml($_product->getName());?></h4>
                </div>
                <ul class="menu-slider display-inline">
                    <li class="active"><a href=""><?php echo $this->__('All')?></a></li>
                    <li><a href=""><?php echo $this->__('Photo')?></a></li>
                    <li><a href=""><?php echo $this->__('Video')?></a></li>
                </ul>
                <ul class="pgwSlider">
                    <?php foreach($_product->getMediaGalleryImages() as $_image):?>
                        <li><img src="<?php echo $_image->getUrl();?>" alt="<?php echo $this->escapeHtml($_image->getLabel()) ?>" ></li>
                    <?php endforeach; ?>
                </ul>
            </div>
        </div>
        <!-- /.modal-content -->
    </div>
    <!-- /.modal-dialog -->
</div>
